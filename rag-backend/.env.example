# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=/app/chroma_db
CHROMA_COLLECTION_NAME=art_grants_knowledge

# LLM Configuration
LLM_MODEL=gpt-4o
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# Vector Store Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://avatar-hub.railway.app

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=/app/data/art_grants_residencies_kb.json

# Update Schedule Configuration
# Examples: 
#   Daily at midnight: cron:0 0 * * *
#   Every 6 hours: interval:6h
#   Weekly on Sunday: cron:0 0 * * 0
UPDATE_SCHEDULE=cron:0 0 * * *
UPDATE_ON_STARTUP=false

# Data Source Configuration
# Custom sources as JSON array: [{"name": "My Source", "url": "...", "type": "scrape"}]
CUSTOM_DATA_SOURCES=
ENABLE_WEB_SCRAPING=true
SCRAPING_TIMEOUT=30

# Notification Configuration (optional)
NOTIFICATION_WEBHOOK=